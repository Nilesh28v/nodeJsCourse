<!DOCTYPE html>
<html>
  <head>
	<title>Example Login Form</title>
  </head>
  <body>
	<div class="login">
		<h1>Login</h1>
		<form action="/auth" method="post">
			<label for="username">
				<!-- font awesome icon -->
				<i class="fas fa-user"></i>
			</label>
			<input type="text" name="email" placeholder="email" id="email" required><br>
			<label for="password">
				<i class="fas fa-lock"></i>  
			</label>
			<input type="password" name="password" placeholder="lname" id="lname" required><br> <br>
			<input type="submit" value="Login">
		</form>
		
		<a href="getForm" class="btn btn-primary">Sign Up</a>
		

	</div>
</body>
</html>